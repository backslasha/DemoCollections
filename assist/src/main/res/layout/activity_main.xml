<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_single_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="singleTask" />

    <Button
        android:id="@+id/button_single_instance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="singleInstance" />

    <Button
        android:id="@+id/button_standard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="standard" />

    <Button
        android:id="@+id/button_single_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="singleTop" />

    <Button
        android:id="@+id/shutdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="exit" />

</LinearLayout>
