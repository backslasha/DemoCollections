<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="yhb.dc">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".demo.launch_mode.LaunchModeMainActivity" />
        <activity
            android:name=".demo.launch_mode.SingleInstanceActivity"
            android:launchMode="singleInstance"
            android:parentActivityName=".demo.launch_mode.LaunchModeMainActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="yhb.dc.SINGLEINSTANCE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".demo.launch_mode.SingleTaskActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".demo.launch_mode.LaunchModeMainActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="yhb.dc.SINGLETASK" />
            </intent-filter>
        </activity>
        <activity
            android:name=".demo.launch_mode.StandardActivity"
            android:launchMode="standard"
            android:parentActivityName=".demo.launch_mode.LaunchModeMainActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="yhb.dc.STANDARD" />
            </intent-filter>
        </activity>
        <activity
            android:name=".demo.launch_mode.SingleTopBaseActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".demo.launch_mode.LaunchModeMainActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="yhb.dc.SINGLETOP" />
            </intent-filter>
        </activity>

        <!-- demo of custom views -->
        <activity android:name=".demo.demo_view.custom_view.CustomViewMainActivity" />

        <!-- demo of animation -->
        <activity android:name=".demo.tranistion.AnimationMainActivity" />

        <!-- demo od animated vector drawable -->
        <activity android:name=".demo.demo_view.click_effect.CommonButtonClickEffectActivity" />
        <activity android:name=".demo.demo_view.canvas.CanvasActivity" />
        <activity android:name=".demo.handler_thread.HandlerThreadActivity" />
        <activity android:name=".demo.demo_fragment.fragment_nest.TabFragmentActivity" />
        <activity android:name=".demo.demo_fragment.fragment_commit.FragmentCommitActivity" />
        <activity android:name=".demo.aidl.ServiceHolderActivity" />

        <service
            android:name=".demo.aidl.LocalService"
            android:process=":test" />
        <activity android:name=".demo.demo_view.view_fields.ViewFieldsActivity" />
        <activity android:name=".demo.demo_fragment.fragment_callback.FragmentCallbackActivity" />
        <activity android:name=".demo.demo_fragment.fragment_dialog.DialogFragmentActivity" />
        <activity android:name=".demo.notification.NotificationActivity" />

        <receiver android:name=".demo.notification.EchoBroadcastReceiver" />

    </application>

</manifest>