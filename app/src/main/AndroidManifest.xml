<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="yhb.dc">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".demo.launch_mode.LaunchModeMainActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".demo.launch_mode.SingleInstanceActivity"
            android:launchMode="singleInstance"
            android:parentActivityName=".demo.launch_mode.LaunchModeMainActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="yhb.dc.SINGLEINSTANCE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".demo.launch_mode.SingleTaskActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".demo.launch_mode.LaunchModeMainActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="yhb.dc.SINGLETASK" />
            </intent-filter>
        </activity>
        <activity
            android:name=".demo.launch_mode.StandardActivity"
            android:launchMode="standard"
            android:parentActivityName=".demo.launch_mode.LaunchModeMainActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="yhb.dc.STANDARD" />
            </intent-filter>
        </activity>
        <activity
            android:name=".demo.launch_mode.SingleTopBaseActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".demo.launch_mode.LaunchModeMainActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="yhb.dc.SINGLETOP" />
            </intent-filter>
        </activity>

        <!-- demo of custom views -->
        <activity
            android:name=".demo.custom_view.CustomViewMainActivity"
            android:parentActivityName=".MainActivity" />

        <!-- demo of animation -->
        <activity
            android:name=".demo.animation.AnimationMainActivity"
            android:parentActivityName=".MainActivity" />

        <!-- demo od animated vector drawable -->
        <activity
            android:name=".demo.animated_vector.CommonButtonClickEffectActivity"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>