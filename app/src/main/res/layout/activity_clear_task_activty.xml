<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".demo.launch_mode.ClearTaskDemo">

    <Button
        android:id="@+id/btn_launch_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动一个新页面"
        app:layout_constraintBottom_toTopOf="@+id/btn_exit_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_exit_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清空任务栈"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_exit_app2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="finishAndRemoveTask()/5.0+"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_exit_app" />

    <Button
        android:id="@+id/btn_exit_app3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="杀掉 MainActivity"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_exit_app2" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="79dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/btn_launch_new"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>